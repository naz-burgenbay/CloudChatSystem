<style>
@@import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');

/* ===== GLOBAL ===== */
body {
    overflow-x: hidden;
    font-family: 'Press Start 2P', monospace;
    background: linear-gradient(#5aa9ff, #9fd4ff);
    color: #002244;
    letter-spacing: 1px;
}

/* ===== TOP BAR ===== */
.xp-topbar {
    background: linear-gradient(to right, #003399, #2a7fff);
    color: white;
    padding: 12px 20px;
    border-bottom: 4px solid #000;
    box-shadow: inset 0 -3px 0 #001f66;
}

.xp-title {
    font-size: 14px;
    text-shadow: 2px 2px #000, 0 0 6px #66ccff;
}

/* ===== MAIN WINDOW ===== */
.welcome-container {
    max-width: 1000px;
    margin: 30px auto;
    padding: 20px;
    box-sizing: border-box;
}


.xp-window {
    background: linear-gradient(#d6e8ff, #c0dcff);
    border: 6px solid #000;
    box-shadow: 12px 12px 0 #000;
    padding: 30px;
    position: relative;
    animation: pixelZoom 0.8s ease;
}

.xp-window::after {
    content: "";
    position: absolute;
    inset: 0;
    background-image: repeating-linear-gradient(
        45deg,
        rgba(255,255,255,0.15),
        rgba(255,255,255,0.15) 10px,
        rgba(255,255,255,0.05) 10px,
        rgba(255,255,255,0.05) 20px
    );
    pointer-events: none;
}

/* ===== HERO ===== */
.hero-section {
    background: #cfe3ff;
    border: 4px solid #000;
    box-shadow: 6px 6px 0 #000;
    padding: 50px 30px;
    text-align: center;
    animation: pixelFade 1s ease;
}

.hero-section h1 {
    font-size: 18px;
    color: #003399;
    text-shadow: 2px 2px #fff, 0 0 10px #66ccff;
}

.hero-section p {
    font-size: 10px;
    color: #002244;
}

/* ===== BANNER ===== */
.xp-banner {
    background: #003399;
    color: white;
    border: 3px solid #000;
    padding: 10px;
    margin: 30px 0;
    font-size: 10px;
    text-shadow: 1px 1px #000;
}

/* ===== SECTIONS ===== */
.section-title {
    font-size: 18px;
    margin: 40px 0 20px;
    text-align: center;
    text-shadow: 2px 2px #fff;
}

/* ===== FEATURE GRID ===== */
.features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
}

/* ===== FEATURE CARD ===== */
.feature-card {
    background: #eaf3ff;
    border: 4px solid #000;
    box-shadow: 6px 6px 0 #000;
    font-size: 10px;
    padding: 16px;
    text-align: center;
    animation: pixelFloat 0.8s ease;
    transition: transform 0.2s ease, background 0.2s ease;
}

.feature-card:hover {
    transform: translate(-4px, -4px);
    background: #ffffff;
}
.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 20px;
}

.feature-icon {
    font-size: 18px;
    display: block;
    margin-bottom: 15px;
    text-shadow: 2px 2px #000;
}

/* ===== CTA ===== */
.cta-section {
    margin-top: 60px;
    background: #cfe3ff;
    border: 4px solid #000;
    box-shadow: 6px 6px 0 #000;
    padding: 40px;
    text-align: center;
    animation: pixelFade 1s ease;
}

.cta-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 20px;
}

/* ===== BUTTONS ===== */
.btn {
    background: linear-gradient(#ffffff, #cfe3ff);
    border: 4px solid #000 !important;
    box-shadow: 4px 4px 0 #000;
    color: #000;
    font-size: 12px;
    padding: 12px 20px;
    transition: all 0.15s ease;
}

.btn:hover {
    background: #ffeb3b;
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 #000;
}

.btn:active {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0 #000;
}

/* ===== ANIMATIONS ===== */
@@keyframes pixelFade {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
}

@@keyframes pixelZoom {
    from { opacity: 0; transform: scale(0.9); }
    to { opacity: 1; transform: scale(1); }
}

@@keyframes pixelFloat {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}


/* === GLOBAL FONT SCALE === */
body {
    font-size: 12px;
}

/* HERO */
.hero-section h1 {
    font-size: 18px;
